<nav class="text-xs px-2 py-2 mb-5 capitalize" aria-label="Breadcrumb">
  <ul class="list-none p-0 inline-flex gap-2">
    <% breadcrumbs.each_with_index do |breadcrumb, index| %>
      <li class="flex items-center gap-2">
        <%= link_to breadcrumb[:path], class: "flex justify-center items-center gap-1 hover:underline #{index == breadcrumbs.length - 1 ? 'text-gray-900' : 'text-gray-500'}"  do %>
         <i class="<%= breadcrumb[:icon] %>"></i>
         <%= breadcrumb[:text] %>
        <% end %>
        <% if index != breadcrumbs.length - 1 %>
          <i class="fas fa-chevron-right text-gray-800 mx-2"></i>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>