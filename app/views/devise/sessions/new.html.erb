<div class="text-white min-h-screen bg-image bg-cover bg-fixed bg-center bg-no-repeat relative" style="background-image: url(<%= @background_image %> )">

  <div class="min-h-screen bg-gradient-to-r from-black to-black/90 px-10 py-6 ">

    <%= render 'components/navigation' %>

    <div class="flex flex-col gap-5 mt-16">

      <h1 class="text-xl font-black font-montserrat">Log in</h1>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'sm:w-1/4 flex flex-col gap-6 mt-5'}) do |f| %>
        <div class="flex flex-col gap-1">
          <%= f.label :email, class: 'text-sm font-bold ml-1' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border-none bg-gray-500/20 text-white px-4 py-3 rounded-lg placeholder:text-sm' %>
        </div>

        <div class="flex flex-col gap-1 relative">
          <%= f.label :password, class: 'text-sm font-bold ml-1' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'border-none bg-gray-500/20 text-white px-4 py-3 rounded-lg placeholder:text-sm', id: 'password-field' %>
          <i class="fa fa-eye-slash absolute right-4 top-10 text-sm cursor-pointer" id="show-password"></i>
          <i class="fa fa-eye absolute right-4 top-10 text-sm cursor-pointer" id="hide-password" style="display: none"></i>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex gap-1 items-center">
            <%= f.check_box :remember_me, class: 'border-none bg-gray-500/20  h-8 w-8 rounded-lg'  %>
            <%= f.label :remember_me, class: 'text-sm font-bold ml-1' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:'px-6 py-3 bg-secondary text-white rounded-lg hover:bg-primary font-bold cursor-pointer' %>
        </div>
      <% end %>

    </div>

    <%= render "devise/shared/links" %>

  </div>

</div>