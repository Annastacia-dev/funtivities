<div class="flex flex-col items-center justify-center">
  <h2 class="text-2xl font-bold text-center mt-5">
    Funtivities in <%= @user_location.city %>, <%= @user_location.country %>
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mt-5">
    <% @events.each do |event| %>
      <%= render "components/event_card", event: event %>
    <% end %>
  </div>
</div>